<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu_buttons.excersize.ExerciseActivity">

    <Button
        android:id="@+id/button_liftingExcersize"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/alegreya_sc"
        android:text="Weightlifting"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_cardioExcersize"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/alegreya_sc"
        android:text="Cardio"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_liftingExcersize" />
</androidx.constraintlayout.widget.ConstraintLayout>